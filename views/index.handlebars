<h1 class="text-center">Burgers!</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6 text-center">
      <h2>New Burgers to Try!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-to-eat devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6 text-center">
      <h2>Burgers I've Eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-eaten devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>



<div class="text-center">
<h2>Add A Burger</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="burger" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>